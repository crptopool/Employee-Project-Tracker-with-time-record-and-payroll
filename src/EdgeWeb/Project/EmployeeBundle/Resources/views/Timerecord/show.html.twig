{% extends 'users/layout.html.twig' %}

{% block body_id 'admin_post_index' %}
 
{% block main %}  
    <h1>Timerecord</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>User</th>
                <td>{{ entity.users }}</td>
            </tr>
            <tr>
                <th>Timein</th>
                <td>{{ entity.timein|date('H:i:s') }}</td>
            </tr>
            <tr>
                <th>Timeout</th>
                <td>{{ entity.timeout|date('H:i:s') }}</td>
            </tr>
            <tr>
                <th>Remark</th>
                <td>{{ entity.remark }}</td>
            </tr>
            <tr>
                <th>Permission</th>
                <td>{{ entity.permissions }}</td>
            </tr>
            <tr>
                <th>Woking Date</th>
                <td>{{ entity.workingday|date('Y-m-d') }}</td>
            </tr>
            <tr>
                <th>No of Hour</th>
                <td>{#{ entity.getWorkHour() }#}</td>
            </tr>
            <tr>
                <th>Createdby</th>
                <td>{{ entity.createdby }}</td>
            </tr>
            <tr>
                <th>Updatedby</th>
                <td>{{ entity.updatedby }}</td>
            </tr>
            <tr>
                <th>Datecreated</th>
                <td>{{ entity.datecreated|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Dateupdated</th>
                <td>{{ entity.dateupdated|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

   {% if app.user and is_granted('ROLE_ADMIN') %}
    <a href="{{ path('timerecord') }}"><i class="fa fa-arrow-left"></i>Back</a>
   
    <a href="{{ path('timerecord_edit', { 'id': entity.id }) }}"><i class="fa fa-edit"></i>Edit</a>
    
    {{ form(delete_form) }}

    {% endif %}

{% endblock %}
