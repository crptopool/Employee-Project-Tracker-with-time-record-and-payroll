{% extends 'users/layout.html.twig' %}

{% block body_id 'admin_post_index' %}

{% block main %}
    <a href="{{ path('position_new') }}" class="btn btn-lg btn-default"><i class="fa fa-plus"></i>Add New Position</a>
    <h3>Position list</h3>
    <div class="table-responsive">
        <table class="table table-condensed table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Department</th>
                    <th>Createdby</th>
                    <th>Updatedby</th>
                    <th>Date Created</th>
                    <th>Date Updated</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('position_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.name }}</td>
                    <td>{{ entity.description }}</td>
                    <td>{{ entity.department }}</td>
                    <td>{{ entity.createdby }}</td>
                    <td>{{ entity.updatedby }}</td>
                    <td>{% if entity.datecreated %}{{ entity.datecreated|date('Y-m-d H:i A')}}{% endif %}</td>
                    <td>{% if entity.dateupdated %}{{ entity.dateupdated|date('Y-m-d H:i A')}}{% endif %}</td>
                    <td>
                        <div class="item-actions">
                            <a href="{{ path('position_show', { 'id': entity.id})}}" class="btn btn-sm btn-danger">show</a>
                            <a href="{{ path('position_edit', { 'id': entity.id})}}" class="btn btn-sm btn-default">edit</a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
