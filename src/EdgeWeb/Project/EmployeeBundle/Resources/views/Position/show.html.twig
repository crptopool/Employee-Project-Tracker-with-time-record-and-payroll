{% extends 'users/layout.html.twig' %}

{% block body_id 'admin_post_index' %}

{% block main %}
    <h3>Position</h3>

        <table class="table table-hover">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ entity.name }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td><textarea>{{ entity.description }}</textarea></td>
                </tr>
                <tr>
                    <th>Createdby</th>
                    <td>{{ entity.createdby }}</td>
                </tr>
                <tr>
                    <th>Updatedby</th>
                    <td>{{ entity.updatedby }}</td>
                </tr>
                <tr>
                    <th>Date created</th>
                    <td>
                        {% if entity.datecreated %}
                            {{ entity.datecreated|date('Y-m-d H:i:s A')}}
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <th>Date updated</th>
                    <td>
                        {% if entity.dateupdated %}
                            {{ entity.dateupdated|date('Y-m-d H:i:s A') }}
                        {% endif %}
                    </td>
                </tr>
            </tbody>
        </table>  
        <a href="{{ path('position') }}"><i class="fa fa-arrow-left"></i>Back</a>   
        <a href="{{ path('position_edit', { 'id': entity.id }) }}"><i class="fa fa-edit"></i>Edit</a>
           
        {#{ form(delete_form) }#}
{% endblock %}
