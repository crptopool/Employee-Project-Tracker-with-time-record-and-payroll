{% extends '::base.html.twig' %}

{% block body -%}
    <div class="container">
        <h1>Project list</h1>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Assigned To</th>
                <th>Name</th>
                <th>Description</th>
                <th>ETA</th>
                <th>Datestarted</th>
                <th>Datefinished</th>
                <th>Status</th>
                <th>Hours</th>
                <th>Createdby</th>
                <th>Updatedby</th>
                <th>Datecreated</th>
                <th>Dateupdated</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('project_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.user}}</td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.description }}</td>
                <td>{% if entity.eta %}{{ entity.eta|date('Y-m-d') }}{% endif %}</td>
                <td>{% if entity.datestarted %}{{ entity.datestarted|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.datefinished %}{{ entity.datefinished|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.status }}</td>
                <td></td>
                <td>{{ entity.createdby }}</td>
                <td>{{ entity.updatedby }}</td>
                <td>{% if entity.datecreated %}{{ entity.datecreated|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.dateupdated %}{{ entity.dateupdated|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <div class="class-items">
                   
                        <!--a href="{#{ path('project_show', { 'id': entity.id }) }#}">show</a-->
                        <a href="{{ path('task', { 'id': entity.tasks})}}">Tasks</a>
                   
                        <a href="{{ path('project_edit', { 'id': entity.id }) }}">edit</a>
                   
                </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('project_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
