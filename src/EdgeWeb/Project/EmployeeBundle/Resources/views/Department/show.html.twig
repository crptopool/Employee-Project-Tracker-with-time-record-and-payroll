{% extends 'users/layout.html.twig' %}

{% block body_id 'admin_post_index' %}

{% block main %}
    <h3>Department</h3>
    <table class="table table-hover table-condensed">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Department</th>
                <td>{{ entity.department }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td><textarea>{{ entity.description }}</textarea></td>
            </tr>
            <tr>
                <th>Createdby</th>
                <td>{{ entity.createdby }}</td>
            </tr>
            <tr>
                <th>Updatedby</th>
                <td>{{ entity.updatedby }}</td>
            </tr>
            <tr>
                <th>Date updated</th>
                <td>{% if entity.dateupdated %}{{ entity.getDateupdated()|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Date created</th>
                <td>{% if entity.datecreated %}{{ entity.datecreated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>
    <a href="{{ path('department') }}"><i class="fa fa-arrow-left"></i>Back</a>
    <a href="{{ path('department_edit', { 'id': entity.id }) }}"><i class="fa fa-edit"></i>Edit</a>
    {#{ form(delete_form) }#}
{% endblock %}
