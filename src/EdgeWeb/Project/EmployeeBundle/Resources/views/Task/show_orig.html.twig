{% extends 'users/layout.html.twig' %}

{% block body_id 'admin_post_index' %}

{% block main %}
    <h1>Task</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td> <textarea>{{ entity.description }}</textarea></td>
            </tr>
            <tr>
                <th>Start</th>
                <td>{% if entity.start %}{{ entity.start|date('H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>End</th>
                <td>{% if entity.end %}{{ entity.end|date('H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>File</th>
                <td><img src="/uploads/documents/{{ entity.path }}" id="img-responsive"></td>
            </tr>
            <tr>
                <th>WorkHours</th>
                <td>{{ entity.getWorkedHours() }}</td>
            </tr>
            <tr>
                <th>Createdby</th>
                <td>{{ entity.createdby }}</td>
            </tr>
            <tr>
                <th>Updatedby</th>
                <td>{{ entity.updatedby }}</td>
            </tr>
            <tr>
                <th>Dateupdated</th>
                <td>{% if entity.dateupdated %}{{ entity.dateupdated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Datecreated</th>
                <td>{% if entity.datecreated %}{{ entity.datecreated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <a href="{{ path('task') }}">
                Back to the list
            </a>
        </li>
        <li>
            <a href="{{ path('task_edit', { 'id': entity.id }) }}">
                Edit
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
{% endblock %}
